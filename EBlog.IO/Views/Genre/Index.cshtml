@using EBlog.Service.Models.VMs.Genre
@model IEnumerable<GetGenreVM>
@{
    ViewData["Title"] = "Index";
}



<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Genre List</h3>
            <div class="card-tools">
                <div class="input-group input-group-sm" style="width:150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search"/>
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body table-responsive p-0">
            <table class="table table-head-fixed text-nowrap">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)

                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td onclick="location.href = '@Url.Action("EditGenre","Genre",new {id = item.Id})'">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteGenre", new{ id=item.Id})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<p>
    <a asp-action="CreateGenre">Create New</a>
</p>







