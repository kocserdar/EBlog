@using EBlog.Service.Models.VMs.AppUser
@model GetRolesVM
@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

@{
    var no = 1;
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>No</th>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@no</td>
                <td>@Html.DisplayFor(Model => role.Id)</td>
                <td>@Html.DisplayFor(Model => role.Name)</td>
            </tr>
            no++;
        }
    </tbody>
</table>
<br />
<a asp-action="CreateRole" asp-controller="User"><b>Create New Role</b></a>